<div class="container mt-5">
  <div class="card shadow">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">
        Booked flight
        from <strong><%= @flight.departure_airport.code %></strong>
        to <strong><%= @flight.arrival_airport.code %></strong>
        <small class="text-light">(ID: <%= @flight.id %>)</small>
      </h2>
    </div>
    
    <div class="card-body">
      <div class="flight-info mb-4 p-3 border rounded">
        <h3 class="mb-3">
          <i class="fas fa-plane-departure"></i> Taking off at <strong><%= @flight.start_datetime.strftime("%B %d, %Y at %H:%M") %></strong>
        </h3>
        <p class="lead">
          <i class="fas fa-clock"></i> Duration: <strong><%= @flight.duration %> minutes</strong>
        </p>
      </div>
      
      <div class="passengers-section">
        <h3 class="border-bottom pb-2 mb-4">Passenger Details</h3>
        
        <div class="row">
          <% @booking.passengers.each_with_index do |p, i| %>
            <div class="col-md-6 mb-4">
              <div class="card h-100">
                <div class="card-header bg-light">
                  <h4 class="mb-0">Passenger <%= i + 1 %></h4>
                </div>
                <div class="card-body">
                  <p><strong>Name:</strong> <%= p.name %></p>
                  <p><strong>Email:</strong> <%= p.email %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="mt-4 d-flex justify-content-between">
        <%= link_to flights_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-search"></i> Return to Search
        <% end %>
        
       <button class="btn btn-success" id="downloadAsPng">
          <i class="fas fa-download"></i> Download as PNG
       </button>
      </div>
    </div>
  </div>
</div>